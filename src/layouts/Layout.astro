---
import '@fontsource/prompt'

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>

    <!-- HTML Meta Tags -->
    <title>GDG Sucre</title>
    <meta name='description' content='Google I/O Sucre 2023' />

    <!-- Facebook Meta Tags -->
    <meta property='og:url' content='https://gdgsucre-landing.vercel.app/' />
    <meta property='og:type' content='website' />
    <meta property='og:title' content='GDG Sucre' />
    <meta property='og:description' content='Google I/O Sucre 2023' />
    <meta
      property='og:image'
      content='https://gdgsucre-landing.vercel.app/opengraph.jpg'
    />

    <!-- Twitter Meta Tags -->
    <meta name='twitter:card' content='summary_large_image' />
    <meta property='twitter:domain' content='gdgsucre-landing.vercel.app' />
    <meta
      property='twitter:url'
      content='https://gdgsucre-landing.vercel.app/'
    />
    <meta name='twitter:title' content='GDG Sucre' />
    <meta name='twitter:description' content='Google I/O Sucre 2023' />
    <meta
      name='twitter:image'
      content='https://gdgsucre-landing.vercel.app/opengraph.jpg'
    />

    <script
      is:inline
      src='https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.7.0/flowbite.min.js'
    ></script>
    <script>
      // On page load or when changing themes, best to add inline in `head` to avoid FOUC
      if (
        localStorage.getItem('color-theme') === 'dark' ||
        (!('color-theme' in localStorage) &&
          window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark')
      } else {
        document.documentElement.classList.remove('dark')
      }
    </script>
  </head>
  <body class='bg-dark-gray font-google'>
    <slot />
  </body>
</html>
